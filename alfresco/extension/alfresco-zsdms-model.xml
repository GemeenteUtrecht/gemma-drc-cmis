                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:integriteit_waarde">
                    <title>DRC - integriteit_waarde</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
