                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:status">
                    <title>DRC - Status</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:beschrijving">
                    <title>DRC - Beschrijving</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:ontvangstdatum">
                    <title>DRC - Ontvangst datum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:verzenddatum">
                    <title>DRC - Verzend datum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <!-- TODO: Nog in te vullen -->
                <property name="drc:indicatie_gebruiksrecht">
                    <title>DRC - Indicatie gebruiksrecht</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:ondertekening_soort">
                    <title>DRC - Ondertekening soort</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>true</tokenised>
                    </index>
                </property>
                <property name="drc:ondertekening_datum">
                    <title>DRC - Ondertekening datum</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
